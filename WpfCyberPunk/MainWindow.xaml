<Window x:Class="WpfCyberPunk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCyberPunk"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Background="Black"
        Title="Cyperpunk 3000" Height="450" Width="800">
    <Grid>
        <Button Name="BtnCreate" ToolTip="" ToolTipOpening="BtnCreate_MouseOver" HorizontalAlignment="Left" Margin="50,50,0,0" VerticalAlignment="Top" Height="100" Width="100">
            <StackPanel Orientation="Horizontal">
                <Image Source="Pictures/Ajout_Personnage.png" Width="60" Height="60"/>
                <TextBlock Text="" VerticalAlignment="Center" />
            </StackPanel>
        </Button>
        <Button x:Name="BtnImport" ToolTip="" ToolTipOpening="BtnImport_MouseOver" Click="BtnImport_Click" HorizontalAlignment="Left" Margin="200,50,0,0" VerticalAlignment="Top" Height="100" Width="100">
            <StackPanel Orientation="Horizontal">
                <Image Source="Pictures/Import_Personnage.png" Width="60" Height="60"/>
                <TextBlock Text="" VerticalAlignment="Center" />
            </StackPanel>
        </Button>
        <Button Name="BtnOpen" ToolTip="" ToolTipOpening="BtnOpen_MouseOver" HorizontalAlignment="Left" Margin="350,50,0,0" VerticalAlignment="Top" Width="100">            
            <StackPanel Orientation="Horizontal">
                <Image Source="Pictures/Feuille_Personnage.png" Width="60" Height="60"/>
                <TextBlock Text="" VerticalAlignment="Center" />
            </StackPanel>
        </Button>
        <Button Name="BtnClose" Click="BtnClose_Click" HorizontalAlignment="Left" Margin="660,50,0,0" VerticalAlignment="Top" Height="100" Width="100">
            <StackPanel Orientation="Horizontal">
                <Image Source="Pictures/Fermer.png" Width="60" Height="60"/>
                <TextBlock Text="" VerticalAlignment="Center" />
            </StackPanel>
        </Button>
    </Grid>
</Window>

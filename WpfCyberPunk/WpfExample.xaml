<Window x:Class="WpfCyberPunk.WpfExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCyberPunk"
        mc:Ignorable="d"
        Title="Exemple" Height="800" Width="1054" Loaded="GetExample">
    <Grid>
        <Label Content="Exemple de données :" HorizontalAlignment="Left" Height="24" Margin="10,10,0,0" VerticalAlignment="Top" Width="395"/>
        <RichTextBox Name="RtxBxExample" ToolTip="" ToolTipOpening="RichText_MouseOver" ToolTipService.ShowDuration="20000" ToolTipService.BetweenShowDelay="10000" HorizontalAlignment="Left" Height="630" Margin="10,10,0,0" VerticalAlignment="Top" Width="1024" AllowDrop="True">
            <FlowDocument>
                <Paragraph>
                    <Run/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button Name="BtnClose" Click="BtnClose_Click" HorizontalAlignment="Left" Height="100" Margin="930,650,0,0" VerticalAlignment="Top" Width="100">
            <StackPanel Orientation="Horizontal">
                <Image Source="Pictures/Valider.png" Width="60" Height="60"/>
                <TextBlock Text="" VerticalAlignment="Center" />
            </StackPanel>
        </Button>
    </Grid>
</Window>
